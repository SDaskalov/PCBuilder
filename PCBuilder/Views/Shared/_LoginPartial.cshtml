@using Microsoft.AspNetCore.Identity
@using PCBuilder.Data.Models;
@using PCBuilder.Services.Contracts;
@using PCBuilder.Web.Infrastructure.Extensions
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@inject IBuilderService BuilderService
@{
    bool isUserBuilder = await BuilderService.BuilderAlreadyExcistsByUserId(User.GetId()!);
   
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        @if (!isUserBuilder)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Builder" asp-action="Become" >Become a PC builder!</a>
        </li>
        }
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
