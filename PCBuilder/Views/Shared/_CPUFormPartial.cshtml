@model CPUFormViewModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="ModelName">Please type the full model name:</label>
                <input asp-for="ModelName" class="form-control" placeholder="ModelName">
                <span asp-validation-for="ModelName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price $</label>
                <input asp-for="Price" class="form-control" placeholder="Price">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="IntegratedGraphics">The CPU includes integrated garphics:</label>
                @Html.EditorFor(model => model.IntegratedGraphics)
                <span asp-validation-for="IntegratedGraphics" class="small text-danger"></span>
                
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="MaxWattage">Maximum CPU wattage</label>
                <input asp-for="MaxWattage" class="form-control" placeholder="MaxWattage">
                <span asp-validation-for="MaxWattage" class="small text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="SocketId">Socket type:</label>
                <select asp-for="SocketId" class="form-control">
                    @foreach (var category in Model.SocketCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="SocketId" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VendorId">CPU manufacturer</label>
                <select asp-for="VendorId" class="form-control">
                    @foreach (var vendor in Model.VendorCategories)
                    {
                        <option value="@vendor.Id">@vendor.Name</option>
                    }
                </select>
                <span asp-validation-for="VendorId" class="small text-danger"></span>
            </div>
        
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
