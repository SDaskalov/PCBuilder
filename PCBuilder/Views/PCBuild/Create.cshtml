@model PCBuildCreateFormViewModel
@{
    ViewData["Title"] = "Create new computer configuration";

}

<h3 class="text-center">@ViewData["Title"] </h3>



<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Model Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialRequestedBid"></label>
                <input asp-for="InitialRequestedBid" class="form-control" placeholder="InitialRequestedBid">
                <span asp-validation-for="InitialRequestedBid" class="small text-danger"></span>
            </div>

            <hr />
         
            <div class="form-group">
                <label asp-for="CpuCategories"></label>
                <select asp-for="CPUId" class="form-control">
                    @foreach (var category in Model.CpuCategories)
                    {
                        <option value="@category.Id">@category.ModelName</option>
                    }
                </select>
                <span asp-validation-for="CPUId" class="small text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="GPUCategories"></label>
                <select asp-for="GPUId" class="form-control">
                    @foreach (var gpu in Model.GPUCategories)
                    {
                        <option value="@gpu.Id">@gpu.ModelName<img src="@gpu.ImageUrl" style="width:70px;height:70px" /></option>
                    }
                </select>
                <span asp-validation-for="GPUId" class="small text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="MotherboardCategories"></label>
                <select asp-for="MotherboardId" class="form-control">
                    @foreach (var mb in Model.MotherboardCategories)
                    {
                        <option value="@mb.Id">@mb.Name<img src="@mb.ImageUrl" style="width:70px;height:70px" /></option>
                    }
                </select>
                <span asp-validation-for="MotherboardId" class="small text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="CaseCategories"></label>
                <select asp-for="ComputerCaseId" class="form-control">
                    @foreach (var cs in Model.CaseCategories)
                    {
                        <option value="@cs.Id">@cs.ModelName<img src="@cs.ImageUrl" style="width:70px;height:70px" /></option>
                    }
                </select>
                <span asp-validation-for="ComputerCaseId" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
